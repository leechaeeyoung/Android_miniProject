<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trot_nav"
    app:startDestination="@id/singer1Fragement">

    <fragment
        android:id="@+id/singer1Fragement"
        android:name="com.example.torot_list.Singer1Fragement"
        android:label="fragment_singer1_fragement"
        tools:layout="@layout/fragment_singer1_fragement" >
        <action
            android:id="@+id/action_singer1Fragement_to_singer2Fragment"
            app:destination="@id/singer2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/singer2Fragment"
        android:name="com.example.torot_list.Singer2Fragment"
        android:label="fragment_singer2"
        tools:layout="@layout/fragment_singer2" >
        <action
            android:id="@+id/action_singer2Fragment_to_singer3Fragment"
            app:destination="@id/singer3Fragment" />
        <action
            android:id="@+id/action_singer2Fragment_to_singer1Fragement"
            app:destination="@id/singer1Fragement" />
    </fragment>
    <fragment
        android:id="@+id/singer3Fragment"
        android:name="com.example.torot_list.Singer3Fragment"
        android:label="fragment_singer3"
        tools:layout="@layout/fragment_singer3" >
        <action
            android:id="@+id/action_singer3Fragment_to_singer1Fragement"
            app:destination="@id/singer1Fragement" />
        <action
            android:id="@+id/action_singer3Fragment_to_singer2Fragment"
            app:destination="@id/singer2Fragment" />
    </fragment>
</navigation>